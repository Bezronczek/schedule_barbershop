<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#cfcccc"
    tools:context=".AppointmentDetailsActivity">
<RelativeLayout
    android:id="@+id/layoutTop"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/bg_card"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp">

    <!--Labels-->

    <LinearLayout
        android:id="@+id/layoutLabels"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="8dp">

        <!--name-->

        <TextView
            android:id="@+id/tvAppointmentName"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="@string/imie"
            android:textStyle="bold"
            />

        <!--surname-->

        <TextView
            android:id="@+id/tvAppointmentSurname"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="@string/nazwisko"
            android:textStyle="bold"
            />

        <!--phone-->

        <TextView
            android:id="@+id/tvAppointmentPhone"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="Telefon"
            android:textStyle="bold"
            />

        <!--mail-->

        <TextView
            android:id="@+id/tvAppointmentEmail"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="Email"
            android:textStyle="bold"
            />

        <!--date-->

        <TextView
            android:id="@+id/tvAppointmentDate"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="Data"
            android:textStyle="bold"
            />

        <!--registered to -->

        <TextView
            android:id="@+id/tvAppointmentEmployee"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="Zarejestrowany do"
            android:textStyle="bold"
            />

        <!--hour-->

        <TextView
            android:id="@+id/tvAppointmentHour"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="Godzina"
            android:textStyle="bold"
            />


        <!--service -->

        <TextView
            android:id="@+id/tvAppointmentService"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="UsÅ‚uga"
            android:textStyle="bold"
            />

        <!--created date-->

        <TextView
            android:id="@+id/tvAppointmentRegistered"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:padding="8dp"
            android:paddingRight="16dp"
            android:text="Utworzono"
            android:textStyle="bold"
            />

        <!--is confirmed-->
        <TextView
        android:id="@+id/tvAppointmentConfirmed"
        android:textSize="22sp"
        android:layout_height="48dp"
        android:layout_width="200dp"
        android:padding="8dp"
        android:paddingRight="16dp"
        android:text="Potwierdzona"
        android:textStyle="bold"
        />
    </LinearLayout>

    <!--Values -->

    <LinearLayout
        android:id="@+id/layoutValues"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/layoutLabels"
        android:padding="8dp">

        <!--name -->

        <TextView
            android:id="@+id/tvAppointmentNameValue"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Janusz"
            android:textAlignment="center"
            android:textSize="22sp" />

        <!--surname-->
        <TextView
            android:id="@+id/tvAppointmentSurnameValue"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Debug user"
            android:textSize="22sp" />

        <!--phone-->
        <TextView
            android:id="@+id/tvAppointmentPhoneValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--mail-->
        <TextView
            android:id="@+id/tvAppointmentEmailValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--date-->
        <TextView
            android:id="@+id/tvAppointmentDateValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--registered to -->
        <TextView
            android:id="@+id/tvAppointmentEmployeeValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--hour-->

        <TextView
            android:id="@+id/tvAppointmentHourValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--service -->
        <TextView
            android:id="@+id/tvAppointmentServiceValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--created date-->
        <TextView
            android:id="@+id/tvAppointmentRegisteredValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

        <!--is confirmed-->
        <TextView
            android:id="@+id/tvAppointmentConfirmedValue"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
</RelativeLayout>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/layoutTop"
    android:padding="8dp"
    android:background="@drawable/bg_card"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="TODO_COMLPETE"
            android:background="@drawable/bg_card"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
        />

        <Button
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="TODO_DELETE"
            android:background="@drawable/bg_card"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            />


    </LinearLayout>
    </RelativeLayout>
