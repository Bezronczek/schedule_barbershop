<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cfcccc"
    android:orientation="vertical"
    tools:context=".AppointmentDetailsActivity">
    <RelativeLayout
        android:id="@+id/layoutTop"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_card"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp">

        <!--Labels-->

        <LinearLayout
            android:id="@+id/layoutLabels"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="8dp">

            <!--name-->

            <TextView
                android:id="@+id/tvAppointmentName"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="@string/imie"
                android:textStyle="bold"
                />

            <!--surname-->

            <TextView
                android:id="@+id/tvAppointmentSurname"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="@string/nazwisko"
                android:textStyle="bold"
                />

            <!--phone-->

            <TextView
                android:id="@+id/tvAppointmentPhone"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Telefon"
                android:textStyle="bold"
                />

            <!--mail-->

            <TextView
                android:id="@+id/tvAppointmentEmail"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Email"
                android:textStyle="bold"
                />

            <!--date-->

            <TextView
                android:id="@+id/tvAppointmentDate"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Data"
                android:textStyle="bold"
                />

            <!--registered to -->

            <TextView
                android:id="@+id/tvAppointmentEmployee"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Zarejestrowany do"
                android:textStyle="bold"
                />

            <!--hour-->

            <TextView
                android:id="@+id/tvAppointmentHour"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Godzina"
                android:textStyle="bold"
                />


            <!--service -->

            <TextView
                android:id="@+id/tvAppointmentService"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="UsÅ‚uga"
                android:textStyle="bold"
                />

            <!--created date-->

            <TextView
                android:id="@+id/tvAppointmentRegistered"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Utworzono"
                android:textStyle="bold"
                />

            <!--is confirmed-->
            <TextView
                android:id="@+id/tvAppointmentConfirmed"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="200dp"
                android:padding="8dp"
                android:paddingRight="16dp"
                android:text="Potwierdzona"
                android:textStyle="bold"
                />
        </LinearLayout>

        <!--Values -->

        <LinearLayout
            android:id="@+id/layoutValues"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/layoutLabels"
            android:padding="8dp">

            <!--name -->

            <EditText
                android:id="@+id/etAppointmentNameValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:hint="@string/imie"
                />

            <!--surname-->

            <EditText
                android:id="@+id/etAppointmentSurnameValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:hint="@string/nazwisko"
                />

            <!--phone-->

            <EditText
                android:id="@+id/etAppointmentPhoneValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:inputType="phone"
                />

            <!--email-->

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/etAppointmentEmailValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                />

            <!--date-->

            <Spinner
                android:id="@+id/sAppointmentDateValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                />

            <!--registered to-->

            <Spinner
            android:id="@+id/sAppointmentEmployeeValueEdit"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

            <!--hour-->

            <Spinner
            android:id="@+id/sAppointmentHourValueEdit"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

            <!--service-->

            <Spinner
                android:id="@+id/sAppointmentServiceValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                />

            <!--created date-->
            <TextView
            android:id="@+id/tvAppointmentRegisteredValueEdit"
            android:textSize="22sp"
            android:layout_height="48dp"
            android:layout_width="300dp"
            android:padding="8dp"
            android:gravity="center_horizontal"
            />

            <!--is confirmed-->

            <TextView
                android:id="@+id/tvAppointmentConfirmedValueEdit"
                android:textSize="22sp"
                android:layout_height="48dp"
                android:layout_width="300dp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_card"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODO_DELETE"
                android:background="@drawable/bg_card"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODO_COMPLETE"
                android:background="@drawable/bg_card"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBUG_SAVE"
                android:background="@drawable/bg_card"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:onClick="updateAppointment"
                />


        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asd"
        android:layout_weight="1"
        android:id="@+id/tvDebug"
        android:gravity="center_horizontal"
        />
</LinearLayout><!-- From: file:/home/mortis/Projekty/Terminarz/app/src/main/res/layout/activity_appointment_edit.xml -->